{
    "name": "rust-mcr",
    "image": "mcr.microsoft.com/vscode/devcontainers/rust:latest",
    "customizations": {
        "vscode": {
            "settings": {
                "[rust]": {
                    "editor.formatOnSave": true
                },
                "rust-analyzer.checkOnSave": true,
                "rust-analyzer.check.command": "clippy"
            },
            "extensions": [
                "oderwat.indent-rainbow"
            ]
        }
    }
}